    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .quote-container {
            text-align: center;
            background-color: transparent;
            padding: 20px;
            border-radius: 10px;
        }
        
        .quote-container p {
            font-size: 12pt;
            color: grey;
            display: none; /* Hide all quotes initially */
        }
        
        /* Show only the first quote initially */
        .quote-container p:first-child {
            display: block;
        }
        
        /* Use CSS animation to rotate quotes every few seconds */
        @keyframes rotateQuotes {
            0% { opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { opacity: 0; }
        }
        
        /* Apply animation to all quotes */
        .quote-container p {
            animation: rotateQuotes 9s infinite;
        }
    </style>
</head>
